    <link rel="stylesheet" href="{{assets}}/css/layout.css" media="screen"/>

{% block css %}
{% endblock css %}

</head>
<body lang="en-GB">
    {% block navigation %}
	<div class="navbar navbar-fixed-top" data-scrollspy="scrollspy" >
	    <div class="navbar-inner">
		<div class="container{{fluid}}">
		    <a class="brand" href="{{subd}}/">{{site.name}}</a>
		    <ul class="nav">
			    <li class="dropdown">
				<a href="#" class="dropdown-toggle" data-toggle="dropdown">MENU<b class="caret"></b></a>
				<ul class="dropdown-menu">
				    <li><a href="{{subd}}/">Item 1</a></li>
				    <li><a href="{{subd}}/">Item 2</a></li>
				    <li><a href="{{subd}}/">Item 3</a></li>
				</ul>
			    </li>
		    </ul>
		    <form class="navbar-search pull-right"><input type="text" class="search-query" placeholder="search"/></form>
		</div>
	    </div>
	</div>
    {% endblock navigation %}

    <div class="container">

	{% block pageheader %}
	    <header class="row{{fluid}}">
		{% block header %}
		{% endblock header %}
	    </header>
	{% endblock pageheader %}

	<article class="mainbody">
	    {% block main %}
	    {% endblock main %}
	</article>

	{% block pagefooter %}
	    <footer class="row{{fluid}}">
		{% block footer %}
		{% endblock footer %}
	    </footer>
	{% endblock pagefooter %}

    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <!--[if lt IE 9]>
    <script src="https://ie7-js.googlecode.com/svn/version/2.1(beta4)/IE9.js"></script>
